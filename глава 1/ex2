import java.util.Scanner;

//Шарыгина Надежда Б763-2
//глава 1 вариант В
//11. Элементы, которые равны полусумме соседних элементов

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Введите количество чисел n: ");
        int n = scanner.nextInt();
        if (n<3) {
            System.out.println("нужно ввести хотя бы 3 элемента");
            return;
        }
        int[] mas = new int[n];

        System.out.println("введите " + n + " целых чисел:");
        for (int i = 0; i < n; i++)
            mas[i]=scanner.nextInt();
        System.out.println("элементы, равные полусумме соседних:");
        for (int i=1; i<n-1;i++){
            float m=(mas[i-1]+mas[i+1]) / 2;
            if (mas[i]==m) System.out.println(mas[i]);
        }
        scanner.close();
    }
}
